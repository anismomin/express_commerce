
	<header id="head" class="secondary"></header>

	<!-- container -->
	<div class="container">

		<ol class="breadcrumb">
			<li><a href="/">Home</a></li>
			<li class="active">Registration</li>
		</ol>

		<div class="row">
			
			<!-- Article main content -->
			<article class="col-xs-12 maincontent">
				<header class="page-header">
					<h1 class="page-title">Registration</h1>
				</header>
				
				<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
					<div class="panel panel-default">
						<div class="panel-body">
							<h3 class="thin text-center">Register a new account</h3>
							<p class="text-center text-muted">Lorem ipsum dolor sit amet, <a href="signin">Login</a> adipisicing elit. Quo nulla quibusdam cum doloremque incidunt nemo sunt a tenetur omnis odio. </p>
							<hr>
							{{#if error }}
							<div class="alert alert-danger"  role="error">
								{{ error }}
							</div>
							{{/if}}
							<hr>
							<form method="post" action="/users" novalidate>
								<div class="top-margin">
									<label>First Name</label>
									<input type="text" name="firstname" class="form-control" value="{{ input.firstname }}" required >
									{{#if error.errors.firstname.message }}
									<div class="badge badge-danger"  role="error">
										{{ error.errors.firstname.message }}
									</div>
									{{/if}}
								</div>
								<div class="top-margin">
									<label>Last Name</label>
									<input type="text" name="lastname" class="form-control" value="{{ input.lastname }}" required >
									{{#if error.errors.lastname.message }}
									<div class="badge badge-danger"  role="error">
										{{ error.errors.lastname.message }}
									</div>
									{{/if}}
								</div>
								<div class="top-margin">
									<label>Username</label>
									<input type="text" name="username" class="form-control" value="{{ input.username }}" required >
									{{#if error.errors.username.message }}
									<div class="badge badge-danger"  role="error">
										{{ error.errors.username.message }}
									</div>
									{{/if}}
								</div>
								<div class="top-margin">
									<label>Email Address <span class="text-danger">*</span></label>
									<input type="email" name="email" class="form-control" value="{{ input.email }}" required >
									{{#if error.errors.email.message }}
									<div class="badge badge-danger"  role="error">
										{{ error.errors.email.message }}
									</div>
									{{/if}}
								</div>

								<div class="row top-margin">
									<div class="col-sm-6">
										<label>Password <span class="text-danger">*</span></label>
										<input type="text" name="password" class="form-control" value="{{ input.password }}" required >
									</div>
									<div class="col-sm-6">
										<label>Confirm Password <span class="text-danger">*</span></label>
										<input type="text" name="c_password"  class="form-control" value="{{ input.cpassword }}" required >
									</div>
								</div>

								<hr>

								<div class="row">
									<div class="col-lg-8">
										<label class="checkbox">
											<input name="terms" type="checkbox"> 
											I've read the <a href="page_terms">Terms and Conditions</a>
										</label>                        
									</div>
									<div class="col-lg-4 text-right">
										<button class="btn btn-action" type="submit">Register</button>
									</div>
								</div>

							</form>
						</div>
					</div>

				</div>
				
			</article>
			<!-- /Article -->

		</div>
	</div>	<!-- /container -->
	
